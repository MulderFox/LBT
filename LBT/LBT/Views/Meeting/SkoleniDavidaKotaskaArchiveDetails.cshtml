@using LBT.ModelViews;
@using LBT.Resources
@model MeetingSkoleniDavidaKotaskaDetail

@{
    ViewBag.Title = ViewResource.Meeting_SkoleniDavidaKotaskaArchiveDetails_Title_Text;
}

<p class="message-error">@ViewBag.StatusMessage</p>

@Html.Partial("_SkoleniDavidaKotaskaDetails")

<h2>@ViewResource.Global_MeetingListAttendees_Text</h2>

<section id="List">
    <table>
        <thead>
            <tr>
                <th>
                    @FieldResource.Global_FirstName_Name
                </th>
                <th class="@ViewBag.LastNameSortSymbol">
                    @Html.ActionLink(FieldResource.Global_LastName_Name, "SkoleniDavidaKotaskaArchiveDetails", new { sortOrder = ViewBag.LastNameSortParam })
                </th>
                <th>
                    @FieldResource.Meeting_Residence_Name
                </th>
                <th class="@ViewBag.LyonessIdSortSymbol">
                    @Html.ActionLink(FieldResource.Global_LyonessId_Name, "SkoleniDavidaKotaskaArchiveDetails", new { sortOrder = ViewBag.LyonessIdSortParam })
                </th>
                <th>
                    @FieldResource.Meeting_PaidAmmount_Name
                </th>
                <th>
                    @FieldResource.Meeting_Residence_Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.MeetingAttendees.Any())
            {
                <tr>
                    <td colspan="7">@ViewResource.Global_NoRecord_Text</td>
                </tr>
            }
            @foreach (var i in Model.MeetingAttendees)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(mi => i.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(mi => i.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(mi => i.City)
                    </td>
                    <td>
                        @Html.DisplayFor(mi => i.LyonessId)
                    </td>
                    <td>
                        @Html.DisplayFor(mi => i.PaidAmmount)
                    </td>
                    <td>
                        @Html.DisplayFor(mi => i.Leader)
                    </td>
                    <td class="buttons">
                        @if (Model.AccessEdit)
                        {
                            <a href="@Url.Action("Details", "MeetingAttendee", new { id = i.MeetingAttendeeId, returnController = "Meeting", returnAction = "SkoleniDavidaKotaskaArchiveDetails", actionId = Model.MeetingId })" title="@ViewResource.Global_HplDetailsTitle_Text"><span class="lbt-icon30-details"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section navigation2
{
    <div id="navigation2">
        <div class="content-wrapper">
            <div class="float-left">
                <nav>
                    <ul class="menu2">
                        <li>@Html.ActionLink(ViewResource.Global_HplPrintAttendeesTitle_Text, "SkoleniDavidaKotaskaPrintDetail", new { id = Model.MeetingId, sortOrder = ViewBag.CurrentSort }, new { target = "_blank" })</li>
                        <li>@Html.ActionLink(ViewResource.Global_HplBackTitle_Text, "SkoleniDavidaKotaskaArchiveIndex")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
}
