@using LBT.Resources
@model LBT.ModelViews.ManualDelete

@{
    ViewBag.Title = ViewResource.Manual_Delete_Title_Text;
}

<p>@ViewResource.Global_DeleteConfirmationQuestion_Text</p>

<section id="deleteForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
    
        <fieldset>
            <legend>@ViewResource.Manual_Form_Legend_Text</legend>
            <table>
                <tbody>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.ManualType):
                        </th>
                        <td>
                            @Html.DisplayFor(m => m.ManualType)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Title):
                        </th>
                        <td>
                            @Html.DisplayFor(m => m.Title)
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="submit" autofocus value="@ViewResource.Global_BtnDeleteTitle_Text" />
        </fieldset>
    }
</section>

@section navigation2
{
    <div id="navigation2">
        <div class="content-wrapper">
            <div class="float-left">
                <nav>
                    <ul class="menu2">
                        <li>@Html.ActionLink(@ViewResource.Global_HplBackToManualIndex_Text, "Index")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
}
