@using LBT.Resources
@model LBT.Models.Currency

@{
    ViewBag.Title = ViewResource.Currency_Create_Title_Text;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@ViewResource.Currency_Form_Legend_Text</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.CurrencyType, new { @class = "required" })
                @Html.DropDownList("CurrencyType", ListItemsResource.CurrencyType_DropDownListTitle)
            </li>
            <li>
                @Html.LabelFor(m => m.ExchangeRateToCZK, new { @class = "required" })
                @Html.TextBoxFor(m => m.ExchangeRateToCZK)
            </li>
        </ol>
        <input type="submit" value="@ViewResource.Global_BtnCreateTitle_Text" />
    </fieldset>
}

@section navigation2
{
    <div id="navigation2">
        <div class="content-wrapper">
            <div class="float-left">
                <nav>
                    <ul class="menu2">
                        <li>@Html.ActionLink(ViewResource.Global_HplBackToCurrencyIndex_Text, "Index")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
}
