@using LBT.Resources
@model LBT.ModelViews.TeamDelete

@{
    ViewBag.Title = ViewResource.Team_Delete_Title_Text;
}

<p>@ViewResource.Global_DeleteConfirmationQuestion_Text</p>

<section id="deleteForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
    
        <fieldset>
            <legend>@ViewResource.Team_Legend_Text</legend>
            <ol>
                <li>
                    <b>@Html.DisplayNameFor(model => model.Title):</b>
                    @Html.DisplayFor(model => model.Title)
                </li>
            </ol>
            <input type="submit" autofocus value="@ViewResource.Global_BtnDeleteTitle_Text" />
        </fieldset>
    }
</section>

@section navigation2
{
    <div id="navigation2">
        <div class="content-wrapper">
            <div class="float-left">
                <nav>
                    <ul class="menu2">
                        <li>@Html.ActionLink(ViewResource.Global_HplBackToTeamIndex_Text, "Index")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
}
